# ============================================
# A.Cosmos Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# --- OpenAI API (Primary AI Provider) ---
# Your OpenAI API key — powers ALL Guardian AI conversations (GPT-5.2)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# --- Database ---
# PostgreSQL connection string (from Neon)
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx-xxx-123456.us-east-2.aws.neon.tech/neondb?sslmode=require

# --- Authentication (Google OAuth 2.0) ---
# Secret key for signing JWT session tokens (generate a random 32+ character string)
JWT_SECRET=your_jwt_secret_here

# Google OAuth 2.0 credentials
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Owner's Google ID (for auto-admin assignment, optional)
# This is the Google 'sub' claim — you'll see it in logs on first login
OWNER_GOOGLE_ID=

# --- Public URL (optional) ---
# Set this if your app is behind a reverse proxy or custom domain
# Example: https://acosmos.app
# If not set, the app will auto-detect from request headers
PUBLIC_URL=

# --- Runtime ---
NODE_ENV=development
PORT=3000
