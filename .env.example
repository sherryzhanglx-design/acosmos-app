# ============================================
# A.Cosmos Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# --- Application ---
# Unique application ID (provided by Manus platform or self-generated)
VITE_APP_ID=your_app_id_here

# --- Database ---
# MySQL connection string (e.g., from PlanetScale, TiDB, or local MySQL)
# Format: mysql://user:password@host:port/database?ssl={"rejectUnauthorized":true}
DATABASE_URL=mysql://user:password@host:port/database

# --- Authentication ---
# Secret key for signing JWT tokens (generate a random 32+ character string)
JWT_SECRET=your_jwt_secret_here

# OAuth server URL (Manus OAuth or custom OAuth provider)
OAUTH_SERVER_URL=https://your-oauth-server.com

# Owner's OpenID (admin user identifier)
OWNER_OPEN_ID=your_open_id_here

# --- AI / LLM ---
# Built-in Forge API (used by default for AI coach conversations)
BUILT_IN_FORGE_API_URL=https://your-forge-api-url.com
BUILT_IN_FORGE_API_KEY=your_forge_api_key_here

# OpenAI API Key (used for GPT-5.2 powered guardians: Andy, Anya, Alma, Axel)
# Get your key at: https://platform.openai.com/api-keys
OpenAIAPIKey4Manus=sk-your_openai_api_key_here

# --- Runtime ---
NODE_ENV=development
